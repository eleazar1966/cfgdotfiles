@import "colors.css";
* {
  /* `otf-font-awesome` is required to be installed for icons */
  border: none;
  border-radius: 0;
  font-family:
    "Roboto Condensed Light", "EnvyCodeR Nerd Font",
    "Noto Sans ExtraCondensed Light", FontAwesome, Roboto, Helvetica, Arial,
    sans-serif;
  min-height: 0;
}

window#waybar {
  background-color: transparent;
  color: @on_surface;
  transition-property: background-color;
  transition-duration: 0.5s;
}
tooltip {
  background: @on_surface;
  border: 1px solid rgba(100, 114, 125, 0.5);
}
tooltip label {
  color: @on_surface;
}

window#waybar.hidden {
  opacity: 0.2;
}

/*
